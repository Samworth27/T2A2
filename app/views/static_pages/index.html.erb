<div class="container my-5 ">
  <div class="row p-4 pb-0 pe-lg-0 pt-lg-5 align-items-center rounded-3 border shadow-lg bg-primary-dark text-secondary">
    <div class="col-lg-7 p-3 p-lg-5 pt-lg-3">
      <h1 class="display-4 fw-bold lh-1">Green Marketplace</h1>
      <p class="lead">Trade your excess for what you need</p>
      <%if user_signed_in? %>
        <p class="lead">User signed and has the roles <%= current_user.roles.map{|role| role.name}%></p>
      <% end%>
      <div class="d-grid gap-2 d-md-flex justify-content-md-start mb-4 mb-lg-3">
        <%= link_to 'Sign Up', new_registration_path(resource_name), class:"btn btn-primary btn-lg px-4 me-md-2 fw-bold" %>
        <%= link_to 'Log In', new_session_path(resource_name), class:"btn btn-outline-secondary btn-lg px-4" %>
      </div>
    </div>
    <div class="col-lg-4 offset-lg-1 p-0 overflow-hidden shadow-lg">
      <%= image_tag('Market_Stall.jpg', class:"rounded-lg-3", width:'720') %>
    </div>
  </div>
</div>
